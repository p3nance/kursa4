<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ProductDetailController">
    <!-- Верхняя панель с заголовком и кнопкой закрытия -->
    <HBox alignment="CENTER" spacing="10" style="-fx-background-color: #1a73e8; -fx-padding: 10;">
        <Label style="-fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold;" text="Подробное описание товара" HBox.hgrow="ALWAYS" />
        <Button fx:id="closeWindowBtn" contentDisplay="RIGHT" style="-fx-padding: 5 10; -fx-font-size: 16; -fx-background-color: #d32f2f; -fx-text-fill: white; -fx-cursor: hand;" text="✕" />
    </HBox>

    <!-- Основной контент -->
    <VBox style="-fx-padding: 20; -fx-spacing: 15;" VBox.vgrow="ALWAYS">
        <HBox alignment="TOP_LEFT" spacing="20">
            <!-- Большое изображение слева -->
            <ImageView fx:id="detailImage" fitHeight="250" fitWidth="300" preserveRatio="true" />

            <!-- Информация справа -->
            <VBox spacing="10" style="-fx-padding: 10;">
                <Label fx:id="detailName" style="-fx-font-size: 24; -fx-font-weight: bold;" />
                <Label fx:id="detailManufacturer" style="-fx-font-size: 14; -fx-text-fill: #666;" />
                <Label fx:id="detailCategory" style="-fx-font-size: 12; -fx-text-fill: #999;" />

                <Label style="-fx-font-size: 12; -fx-text-fill: #999;">Описание:</Label>
                <Label fx:id="detailDescription" style="-fx-font-size: 13;" wrapText="true" />

                <Label fx:id="detailPrice" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #1a73e8;" />

                <HBox spacing="10">
                    <Button fx:id="addToCartBtn" style="-fx-padding: 10; -fx-font-size: 14; -fx-background-color: #1a73e8; -fx-text-fill: white; -fx-cursor: hand;" text="Добавить в корзину" />
                    <Button fx:id="closeBtn" style="-fx-padding: 10; -fx-font-size: 14; -fx-background-color: #888; -fx-text-fill: white; -fx-cursor: hand;" text="Закрыть" />
                </HBox>
            </VBox>
        </HBox>
    </VBox>
</VBox>
