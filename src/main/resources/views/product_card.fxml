<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.ProductCardController"
      spacing="10" alignment="CENTER" prefWidth="200"
      style="-fx-background-color: #F8F8F8; -fx-border-radius:8; -fx-background-radius:8; -fx-effect: dropshadow(gaussian, #B0B0B0, 6, 0, 0, 2);">
    <ImageView fx:id="productImage" fitWidth="180" fitHeight="120"/>
    <Label fx:id="productName" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
    <Label fx:id="productDescription" wrapText="true"/>
    <Label fx:id="productPrice" style="-fx-text-fill: #228be6; -fx-font-size: 14px;"/>
    <Button fx:id="addToCartBtn" text="В корзину" style="-fx-background-color: #228be6; -fx-text-fill: white; -fx-background-radius: 6;" />
</VBox>
