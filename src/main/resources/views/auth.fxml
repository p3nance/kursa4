<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.AuthController"
            stylesheets="@styles/cabinet-auth.css"
            styleClass="auth-bg">

    <TabPane fx:id="authTabPane" prefHeight="510.0" prefWidth="400.0" tabClosingPolicy="UNAVAILABLE" styleClass="auth-pane">
        <!-- Вкладка входа -->
        <Tab text="Вход">
            <VBox spacing="22" alignment="CENTER" prefWidth="400">
                <padding>
                    <Insets top="36" right="38" bottom="28" left="38"/>
                </padding>
                <Text text="Вход в систему" styleClass="auth-title" />
                <VBox spacing="13" prefWidth="320">
                    <Label text="Email:" styleClass="auth-label"/>
                    <TextField fx:id="loginEmail" promptText="Введите email" styleClass="auth-field"/>

                    <Label text="Пароль:" styleClass="auth-label"/>
                    <PasswordField fx:id="loginPassword" promptText="Введите пароль" styleClass="auth-field"/>
                </VBox>
                <Button fx:id="loginButton" text="Войти" styleClass="auth-btn auth-btn-blue"/>
                <ProgressIndicator fx:id="loginProgress" prefWidth="28" prefHeight="28" visible="false"/>
                <HBox spacing="7" alignment="CENTER">
                    <Label text="Нет аккаунта?" styleClass="auth-label"/>
                    <Button fx:id="switchToRegisterButton" text="Зарегистрироваться" styleClass="auth-link"/>
                </HBox>
                <Button fx:id="loginBackButton" text="← Назад" styleClass="auth-btn auth-btn-back"/>
            </VBox>
        </Tab>

        <!-- Вкладка регистрации -->
        <Tab text="Регистрация">
            <VBox spacing="22" alignment="CENTER" prefWidth="400">
                <padding>
                    <Insets top="36" right="38" bottom="28" left="38"/>
                </padding>
                <Text text="Регистрация" styleClass="auth-title" />
                <VBox spacing="13" prefWidth="320">
                    <Label text="Email:" styleClass="auth-label"/>
                    <TextField fx:id="registerEmail" promptText="Введите email" styleClass="auth-field"/>

                    <Label text="Пароль:" styleClass="auth-label"/>
                    <PasswordField fx:id="registerPassword" promptText="Введите пароль" styleClass="auth-field"/>

                    <Label text="Подтвердите пароль:" styleClass="auth-label"/>
                    <PasswordField fx:id="registerConfirmPassword" promptText="Повторите пароль" styleClass="auth-field"/>
                </VBox>
                <Button fx:id="registerButton" text="Зарегистрироваться" styleClass="auth-btn auth-btn-green"/>
                <ProgressIndicator fx:id="registerProgress" prefWidth="28" prefHeight="28" visible="false"/>
                <HBox spacing="7" alignment="CENTER">
                    <Label text="Уже есть аккаунт?" styleClass="auth-label"/>
                    <Button fx:id="switchToLoginButton" text="Войти" styleClass="auth-link"/>
                </HBox>
                <Button fx:id="registerBackButton" text="← Назад" styleClass="auth-btn auth-btn-back"/>
            </VBox>
        </Tab>
    </TabPane>
</AnchorPane>
